<?xml version="1.0" encoding="utf-8"?>
<com.ateam.shippingcity.widget.ElasticScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        >

        <com.ateam.shippingcity.widget.HAutoCompleteTextView
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="输入密码"
            android:minHeight="50dp" />

        <com.ateam.shippingcity.widget.HAutoCompleteTextView
            android:id="@+id/et_confirm_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="确认密码"
            android:minHeight="50dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:minHeight="50dp"
            android:text="填写基本资料"
            android:textColor="#4c4c4c"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#bebebe" />

        <com.ateam.shippingcity.widget.HAutoCompleteTextView
            android:id="@+id/et_true_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="真实姓名(中文)"
            android:drawableLeft="@drawable/registration_required_fields_icon"
            android:minHeight="50dp" />

        <com.ateam.shippingcity.widget.HAutoCompleteTextView
            android:id="@+id/et_company"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="公司名称"
            android:drawableLeft="@drawable/registration_required_fields_icon"
            android:minHeight="50dp" />

        <com.ateam.shippingcity.widget.HAutoCompleteTextView
            android:id="@+id/et_inviter_mobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="推荐人手机号"
            android:inputType="phone"
            android:minHeight="50dp" />

        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/btn_commit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_orange_selector"
            android:text="提交"
            android:textColor="@color/white" />
    </LinearLayout>
</com.ateam.shippingcity.widget.ElasticScrollView>