<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292C35"
    android:paddingTop="50dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:orientation="vertical" >

    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您还未登录，请先登录！"
        android:textSize="18sp"
        android:textColor="#3F4452"
        />
    
    <com.ateam.shippingcity.widget.HAutoCompleteTextView
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_launcher"
        android:background="#292C35"
        android:hint="手机号/用户名"
        android:textColorHint="#3B3E49"
        android:drawablePadding="10dp"
        />
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#424550"
        android:layout_marginTop="3dp"
        />
    <com.ateam.shippingcity.widget.HAutoCompleteTextView
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_launcher"
        android:background="#292C35"
        android:hint="密码"
        android:textColorHint="#3B3E49"
        android:textColor="#3F4452"
        android:drawablePadding="10dp"
        />
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#424550"
        android:layout_marginTop="3dp"
        />
        
    <Button 
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="#3F4452"
        />
    <LinearLayout 
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <TextView 
            android:id="@+id/txt_goto_regist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:text="马上注册"
            android:gravity="center_vertical"
            android:textColor="#3F4452"
            android:textSize="18sp"
            />
        <TextView 
            android:id="@+id/txt_forget_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#3F4452"
            android:text="忘记密码？"
            android:minHeight="40dp"
            android:textSize="18sp"
            android:gravity="right|center"
            />
    </LinearLayout>
</LinearLayout>
