<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MyQuoteSeaTransportFCLActivity" >

    <com.ateam.shippingcity.widget.ElasticScrollView
        android:id="@+id/elasticScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/myQuote_item_height"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xlist_marginl"
                    android:text="@string/transport_type" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="海运" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/xlist_marginl"
                android:layout_marginRight="@dimen/xlist_marginr"
                android:background="@drawable/lineColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/myQuote_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/myQuote_iv_width"
                    android:layout_height="@dimen/myQuote_iv_height"
                    android:layout_marginLeft="@dimen/xlist_marginl"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xlist_marginl"
                    android:text="HONGKONG" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/myQuote_line_left_iv"
                android:layout_marginRight="@dimen/xlist_marginr"
                android:background="@drawable/lineColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/myQuote_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/myQuote_iv_width"
                    android:layout_height="@dimen/myQuote_iv_height"
                    android:layout_marginLeft="@dimen/xlist_marginl"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xlist_marginl"
                    android:text="ALEXANDRIA" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/xlist_marginl"
                android:layout_marginRight="@dimen/xlist_marginr"
                android:background="@drawable/lineColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/myQuote_bottom"
                android:layout_marginTop="@dimen/myQuote_top"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/myQuote_iv_width"
                    android:layout_height="@dimen/myQuote_iv_height"
                    android:layout_marginLeft="@dimen/xlist_marginl"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/xlist_marginl"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_quote_transport_time" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015/03/06" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_quote_horizontal_line" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015/03/06" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/xlist_marginl"
                android:layout_marginRight="@dimen/xlist_marginr"
                android:background="@drawable/lineColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/myQuote_bottom"
                android:layout_marginTop="@dimen/myQuote_top"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/myQuote_iv_width"
                    android:layout_height="@dimen/myQuote_iv_height"
                    android:layout_marginLeft="@dimen/xlist_marginl"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xlist_marginl"
                    android:text="箱型;20GP;数量2箱;40GP;数量4箱40HQ,数量5箱" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/xlist_marginl"
                android:layout_marginRight="@dimen/xlist_marginr"
                android:background="@drawable/lineColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/myQuote_bottom"
                android:layout_marginTop="@dimen/myQuote_top"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="@dimen/myQuote_iv_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xlist_marginl"
                    android:text="@string/note" 
                    android:layout_gravity="top"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xlist_marginl"
                    android:text="箱型;20GP;数量2箱;40GP;数量4箱40HQ,数量5箱" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/xlist_marginl"
                android:layout_marginRight="@dimen/xlist_marginr"
                android:background="@drawable/lineColor" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/myQuote_item_height"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xlist_marginl"
                    android:text="@string/quotation_deadline" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11-12 8:00" />
            </LinearLayout>
        </LinearLayout>
    </com.ateam.shippingcity.widget.ElasticScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/lineColor" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="@dimen/my_offer_width"
        android:layout_height="@dimen/my_offer_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/xlist_bottom"
        android:layout_marginTop="@dimen/xlist_top"
        android:background="@drawable/my_offer_shape"
        android:gravity="center"
        android:text="@string/my_offer"
        android:textColor="@color/white" />

</LinearLayout>